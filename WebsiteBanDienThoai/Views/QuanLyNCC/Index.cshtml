@using PagedList;
@using PagedList.Mvc;
@model PagedList.PagedList<WebsiteBanDienThoai.Models.NhaCungCap>
<link href="~/Content/TrangChuCss.css" rel="stylesheet" />

@{
    ViewBag.Title = "Quản lý Nhà xcung Cấp";
    Layout = "~/Views/LayOut/AdminLayout.cshtml";
}

<button>
    @Html.ActionLink("Thêm mới Nhà xuất bản", "ThemMoi")
</button>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.First().TenNCC)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().DiaChi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().DienThoai)
        </th>
        <th>
            Chi tiết
        </th>
        <th>
            Sửa
        </th>
        <th>
            Xóa
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenNCC)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiaChi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DienThoai)
            </td>
            <td>
                @Html.ActionLink("Chi tiết", "HienThi", new { @_MaNCC = item.MaNCC })
            </td>
            <td>
                @Html.ActionLink("Sửa", "ChinhSua", new { @_MaNCC = item.MaNCC })
            </td>
            <td>
                @Html.ActionLink("Xóa", "Xoa", new { @_MaNCC = item.MaNCC })
            </td>
        </tr>
    }

</table>
<div id="divBody">
    <br />
    Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/@Model.PageCount
</div>
<div id="divBody" class="MenuTrang">
    @Html.PagedListPager(Model, page => Url.Action("Index", "QuanLyNCC", new { _Page = page }))
</div>
