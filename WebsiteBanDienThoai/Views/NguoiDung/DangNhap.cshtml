<link href="~/Content/TrangChuCss.css" rel="stylesheet" />
@{
    ViewBag.Title = "Đăng nhập";
    Layout = "~/Views/LayOut/NguoiDungLayout.cshtml";
}
<div class="main-container nav-bg-color">
    <div class="inside-container nav-contain">
        <div id="KhachHang">
            <h2>Đăng nhập</h2>
            <h3 id="CanhBao">@ViewBag.ThongBao</h3>
            @using (Html.BeginForm("DangNhap", "NguoiDung", FormMethod.Post))
            {
                <div class="form-group">
                    <label class="control-label col-sm-10" for="email">Tên đăng nhập</label>
                    <div class="col-sm-4">
                        <input type="text" class="form-control" id="CanhBao" placeholder="Enter account" name="txtTaiKhoan">
                    </div>
                </div>
                <div class="clearfix"></div>
                <div class="form-group">
                    <label class="control-label col-sm-10" for="pwd">Mật khẩu</label>
                    <div class="col-sm-4">
                        <input type="password" class="form-control" id="CanhBao" placeholder="Enter password" name="txtMatKhau">
                    </div>
                </div>
                <div class="clearfix"></div>

                <div class="form-group">
                    <div class="control-label col-sm-10">
                        <input id="btnSubmit" type="submit" value="Đăng nhập" class="btn btn-success" />
                    </div>
                </div>
                <div class="clearfix"></div>
                <div class="clearfix"></div>
                <div class="clearfix"></div>
                <div class="clearfix"></div>
                <div class="clearfix"></div>
                <div class="clearfix"></div>

            }
        </div>
    </div>
</div>

