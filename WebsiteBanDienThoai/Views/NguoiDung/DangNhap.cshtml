<link href="~/Content/TrangChuCss.css" rel="stylesheet" />
@{
    ViewBag.Title = "Đăng nhập";
    Layout = "~/Views/LayOut/NguoiDungLayout.cshtml";
}
<div id="KhachHang">
    <h2>Đăng nhập</h2>
    <h3 id="CanhBao">@ViewBag.ThongBao</h3>
    @using (Html.BeginForm("DangNhap", "NguoiDung", FormMethod.Post))
    {
        <div class="form-group">
            <label class="control-label col-sm-10" for="email">Tên đăng nhập</label>
            <div class="col-sm-4">
                <input type="text" class="form-control" id="email" placeholder="Enter account" name="txtTaiKhoan">
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="form-group">
            <label class="control-label col-sm-10" for="pwd">Mật khẩu</label>
            <div class="col-sm-4">
                <input type="password" class="form-control" id="pwd" placeholder="Enter password" name="txtMatKhau">
            </div>
        </div>
        <div class="clearfix"></div>

        <div class="form-group">
            <div class="control-label col-sm-10">
                <input id="btnSubmit" type="submit" value="Đăng ký" style="background-color:green;color:white;cursor:pointer;" class="btn btn-default" />
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="clearfix"></div>
        <div class="clearfix"></div>
        <div class="clearfix"></div>
        <div class="clearfix"></div>
        <div class="clearfix"></div>

    }
</div>

